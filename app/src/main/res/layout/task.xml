<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="task"
            type="com.watsonlogic.vitalarium.model.task.Task" />

        <variable
            name="dashboardPresenter"
            type="com.watsonlogic.vitalarium.presenter.dashboard.DashboardPresenter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{task.title}"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/task_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/task_title"
                android:text="@{task.description}" />
        </LinearLayout>

        <ImageView
            android:id="@+id/task_more_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="@{(view)->dashboardPresenter.onClickTaskMoreOptions(task)}"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />
    </RelativeLayout>
</layout>